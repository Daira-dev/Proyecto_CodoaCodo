    <!-- Título-->
    <title> Registrarse │ Funkoshop </title>
    
    <!-- Ícono -->
    <link rel="icon" href="../Assets/Img/branding/isotype.svg">    
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

    <!-- CSS -->        
    <link rel="stylesheet" href="/Css/index.css">
    <link rel="stylesheet" href="/Css/login.css">
</head>


<body>
    <!-- Encabezado -->
    <%- include ('partials/header') %>
    <!-- Fin del Encabezado -->


    <!-- Contenido -->
    <main class="container my-5">

      <h1 class="text-center titulo">CREA TU CUENTA</h1>
      <h2 class="text-center" id="subtitulo">Completa el formulario para ser parte del mundo de los Funkos</h2>

      <div class="formulario justify-content-center">
        <form action="/auth/register" method="post">
          <div class="rellenar_form">
            <label for="name">Nombre:</label>
            <input id="name" name="name" type="text" placeholder="Max">
            <br>
            <label for="lastname">Apellido:</label>
            <input id="lastname" name="lastname" type="text" placeholder="Power">
            <br>
            <label for="email">Email:</label>
            <input id="email" name="email" type="text" placeholder="maxpower@correo.com">
            <br>
            <label for="password">Contraseña:</label>
            <input id="password" name="password" type="password" placeholder="•••••••••">
            <br>
            <label for="reapeatpass">Repetir Contraseña:</label>
            <input id="reapeatpass" name="reapeatpass" type="password" placeholder="•••••••••">
          </div>
          <div class="text-center">
            <button type="submit" class="btn_1">Registrar</button>
            <label for="aceptoterminos" class="acepto_terminos">
              <input type="checkbox" id="aceptoterminos" value="si">
              Acepto <span class="terminos_condiciones">Términos y Condiciones</span>
            </label>
          </div>
        </form>       
      </div>

         
      
    </main>
    <!-- Fin del Contenido -->

    <!-- Pie de página -->
    <%- include ('partials/footerAdmin') %>  
    <!-- Fin de pie de página -->
</body>

<!-- Scripts -->
