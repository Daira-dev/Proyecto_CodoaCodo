    <!-- Título-->
    <title> Funkoshop │ Home </title>
    
    <!-- Ícono -->
    <link rel="icon" href="../Assets/Img/branding/isotype.svg">     
    
    <!-- Glide -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/css/glide.core.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/css/glide.theme.min.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous"/>
 
    <!-- CSS -->
    <link rel="stylesheet" href="./Css/index.css">
</head>

<body>

    <!-- Encabezado -->
    <%- include ('partials/header') %>
    <!-- Fin del Encabezado -->
    
    <!--Banner-->
    <section class="hero">
        <article class="hero__content container">
            <h2 class="hero__title">Nuevos Ingresos</h2>
            <p class="hero__text">Descubrí el próximo Funko Pop de tu colección</p>
            <a class="hero__link" href="./pages/shop.html">SHOP</a>
        </article>
    </section>
    <!---->

    <!-- Contenido -->
    <main class="main-container">

        <!-- Artículos -->
        <section class="collection container">
                <article class="collection__content">
                    <h3 class="collection__tittle">Star Wars & The Mandalorian </h3>
                    <p class="collection__text">Disfruta de una saga que sigue agregando personajes a su colección.</p>
                    <a class="collection__link" href="shop.html">VER COLECCIÓN</a>
                </article>
                <picture class="collection__cover">
                    <img src="./Assets/Img/star-wars/baby-yoda-1.webp" alt="Coleccionable figura Mandalorian BBYoda">
                </picture>
        </section>  
        <section class="collection container">
            <article class="collection__content">
                <h3 class="collection__tittle">POKEMON INDIGO</h3>
                <p class="collection__text"> Atrapa todos los que puedas y disfruta de una colección llena de amigos.</p>
                <a class="collection__link" href="shop.html">VER COLECCIÓN</a>
            </article>
            <picture class="collection__cover">
                <img src="./Assets/Img/pokemon/vulpix-1.webp" alt="Coleccionablefigura vulpix-1">
            </picture>
        </section>
        <section class="collection container">
            <article class="collection__content">
                <h3 class="collection__tittle">HARRY POTTER</h3>
                <p class="collection__text">Revive los recuerdos de una saga llena de magia y encanto.</p>
                <a  class="collection__link" href="shop.html">VER COLECCIÓN</a>
            </article>
            <picture class="collection__cover">
                <img src="./Assets/Img/harry-potter/snape-patronus-1.webp" alt="Coleccionable figura snape-patronus-1">
            </picture>
        </section>
        
        <!-- Slider -->
        <section class="slider container glide">
            <h2 class="slider__title">Últimos lanzamientos</h2>
            <div class="glide__track" data-glide-el="track">
                <ul class="slider__items glide__slides">
                    <li class="slider__item glide__slide">
                        <article class="card-item">
                            <a  class="card-item__link" href="shop.html">
                                <picture class="card-item__cover">
                                    <span class="card-item__tag">Nuevo</span>
                                    <img class="card-item__img--front" src="./Assets/Img/star-wars/trooper-1.webp" alt="Coleccionablefigura star-wars">
                                    <img class="card-item__img--back" src="./Assets/Img/star-wars/trooper-box.webp" alt="Coleccionablefigura star-wars, en caja">
                                </picture>
                                <div class="card-item__content">
                                    <p class="card-item__license">STAR WARS</p>
                                    <h4 class="card-item__name">STORMTROOPER LIGHTSABER</h4>
                                    <p class="card-item__price">$1799,99</p>
                                    <p class="card-item__promo">3 CUOTAS SIN INTERÉS</p>
                                </div>
                            </a>
                        </article>
                    </li>
                    <li class="slider__item glide__slide">
                        <article class="card-item">
                            <a class="card-item__link" href="shop.html">
                                <picture class="card-item__cover">
                                    <span class="card-item__tag">Nuevo</span>
                                    <img class="card-item__img--front" src="./Assets/Img/pokemon/pidgeotto-1.webp" alt="Coleccionable Figura pdgeotto Pokemón">
                                    <img class="card-item__img--back" src="./Assets/Img/pokemon/pidgeotto-box.webp" alt="Coleccionable Figura pdgeotto Pokemón en caja">
                                </picture>
                                <div class="card-item__content">
                                    <p class="card-item__license">POKEMÓN</p>
                                    <h4 class="card-item__name">PIDGEOTTO</h4>
                                    <p class="card-item__price">$1799,99</p>
                                    <p class="card-item__promo"> 3 CUOTAS SIN INTERÉS</p>
                                </div>
                            </a>
                        </article>
                    </li>
                    <li class="slider__item glide__slide">
                        <article class="card-item">
                            <a class="card-item__link" href="shop.html">
                                <picture class="card-item__cover">
                                    <span class="card-item__tag">Nuevo</span>
                                    <img class="card-item__img--front" src="./Assets/Img/harry-potter/luna-1.webp" alt="Coleccionable FIGURA Luna Lovegood H Potter">
                                    <img class="card-item__img--back" src="./Assets/Img/harry-potter/luna-box.webp" alt="Coleccionable FIGURA Luna Lovegood H Potter en caja">
                                </picture>
                                <div class="card-item__content">
                                    <p class="card-item__license">HARRY POTTER</p>
                                    <h4 class="card-item__name">LUNA LOVEGOOD LION MASK</h4>
                                    <p class="card-item__price">$1799,99</p>
                                    <p class="card-item__promo">3 CUOTAS SIN INTERÉS</p>
                                </div>
                            </a>
                        </article>
                    </li>
                </ul>
            </div>
            <div class="glide__arrows" data-glide-el="controls">
                <button class="glide__arrow glide__arrow--left" data-glide-dir="<"><iconify-icon icon="ic:round-chevron-left"></iconify-icon></button>
                <button class="glide__arrow glide__arrow--right" data-glide-dir=">"><iconify-icon icon="ic:round-chevron-right"></iconify-icon></button>
            </div>
        </section>
    </main>
    <!---->

    <!-- Pie de página -->
    <%- include ('partials/footer') %>
    <!---->
    
    <!--Scripts-->
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
    <script src="Js/glide.js"></script>

</body>



</html>